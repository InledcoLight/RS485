<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_timer_chn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHx"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/item_timer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="HH : mm"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/item_timer_chn"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_timer_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/turn_off"
        app:layout_constraintLeft_toLeftOf="@+id/item_timer_time"
        app:layout_constraintTop_toBottomOf="@+id/item_timer_time"/>

    <TextView
        android:id="@+id/item_timer_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/item_timer_action"
        app:layout_constraintLeft_toLeftOf="@+id/item_timer_time"/>

    <Switch
        android:id="@+id/item_timer_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Switch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_timer_time"
        app:layout_constraintBottom_toBottomOf="@+id/item_timer_time"
        android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>